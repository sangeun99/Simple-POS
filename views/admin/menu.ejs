<%- include('../header'); -%>
#container { 
    max-width : 550px;   
    margin : 60px auto;    
}

table {
    width: 100%;
    border-top: 1px solid #444444;
    border-collapse: collapse;
}

th, td {
    border-bottom: 1px solid #444444;
    padding: 3px;
    text-align : center;
    vertical-align : middle
}

<%- include('header'); -%>


<div id = "container">
    <form action="/admin/menu/create" method="get">
        <button type="submit">메뉴 추가하기</button>
    </form>

    <table>    
        <colgroup>
                <col width='50'><col width='80'><col width='210'><col width='80'><col width='50'><col width='80'>        
        </colgroup>
        <thead>
            <tr>
                <th>메뉴</th>
                <th>종류</th>
                <th>이름</th>
                <th>가격</th>
                <th>상태</th>
                <th>수정</th>
            </tr>
        </thead>
        <tbody>
            <% for(i = 0; i < list.length; i++) { %>
                <tr>
                    <td><%=list[i].menuid %></td>
                    <td><%=list[i].menutype %></td>
                    <td><%=list[i].menuname %></td>
                    <td><%=list[i].price %></td>
                    <td><%=list[i].menustate %></td>
    
                    <td> 
                        <form action="/admin/menu/edit/<%=list[i].menuid %>" method="get">
                            <button type="submit">수정하기</button>
                        </form>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>

<%- include('../footer'); -%>